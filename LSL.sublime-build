{
	"file_regex": "^(..[^:]*)::[^:]*::[^(]*\\(\\s*([0-9]+)\\,\\s*([0-9]+)\\):\\s(.*)",
	"selector": "source.lsl, source.ossl",

	"windows":
	{
		"cmd": ["$packages\\LSL\\windows\\lslint.exe", "-p", "$file"]
	},

